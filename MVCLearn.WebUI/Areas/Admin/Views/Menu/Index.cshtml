@{
    ViewBag.Title = "Index";
}

@section CustScripts{
    <script src="~/assets/js/Admin/Menu/Index.min.js"></script>
}

<div class="panel panel-default">
    <div class="panel-heading">
        菜单列表
    </div>
    <div class="panel-body">
        <div class="btn-group pull-right">
            <button class="btn btn-default">
                <span class="fa fa-plus text-success"></span> 添加
            </button>
            <button class="btn btn-default">
                <span class="fa fa-edit text-info"></span> 编辑
            </button>
            <button class="btn btn-default">
                <span class="fa fa-trash text-danger"></span> 删除
            </button>
            <div class="btn-group">
                <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    <span class="fa fa-list text-primary"></span>
                    更多<span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li>
                        <a href="javascript:void(0);">
                            <span class="fa fa-file-excel-o" style="color: green;"></span> Excel
                        </a>
                    </li>
                    <li class="divider"></li>
                    <li>
                        <a href="javascript:void(0);">
                            <span class="fa fa-print"></span> 打印
                        </a>
                    </li>
                    <li class="divider"></li>
                    <li>
                        <a href="javascript:void(0);">
                            <span class="fa fa-share-alt-square" style="color:#FF6C00"></span> 分享
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-condensed table-tree" id="menu-table">
        <thead>
            <tr>
                <th style="width: 35px">#</th>
                <th style="width: 30%">标题</th>
                <th style="width: 45%">路径</th>
                <th>图标</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
    <div class="panel-footer">
        <div class="pagination-right">
            <ul class="pagination">
                <li><a href="javascript:void(0);">&laquo;</a></li>
                <li><a href="javascript:void(0);">1</a></li>
                <li><a href="javascript:void(0);">2</a></li>
                <li><a href="javascript:void(0);">3</a></li>
                <li><a href="javascript:void(0);">4</a></li>
                <li><a href="javascript:void(0);">5</a></li>
                <li><a href="javascript:void(0);">6</a></li>
                <li><a href="javascript:void(0);">&raquo;</a></li>
            </ul>
        </div>
    </div>
</div>