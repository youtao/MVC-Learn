<div class="panel panel-default" id="vue-users">
    <div class="panel-heading">
        用户列表
    </div>
    <div class="panel-body">
        <div class="btn-group pull-right">
            <button class="btn btn-default">
                <span class="fa fa-plus text-success"></span> 添加
            </button>
            <button class="btn btn-default">
                <span class="fa fa-edit text-info"></span> 编辑
            </button>
            <button class="btn btn-default">
                <span class="fa fa-trash text-danger"></span> 删除
            </button>
            <div class="btn-group">
                <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    <span class="fa fa-list text-primary"></span>
                    更多<span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li>
                        <a href="javascript:void(0);">
                            <span class="fa fa-file-excel-o"></span> Excel
                        </a>
                    </li>
                    <li class="divider"></li>
                    <li>
                        <a href="javascript:void(0);">
                            <span class="fa fa-print"></span> 打印
                        </a>
                    </li>
                    <li class="divider"></li>
                    <li>
                        <a href="javascript:void(0);">
                            <span class="fa fa-share-alt-square"></span> 分享
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>#</th>
                <th>用户名</th>
                <th>昵称</th>
                <th>上次登录</th>
            </tr>
        </thead>
        <tbody>
            <tr v-for="(user,index) in users">
                <td>{{index+1}}</td>
                <td>{{user.UserName}}</td>
                <td>{{user.NickName}}</td>
                <td>{{user.LoginTime}}</td>
            </tr>
        </tbody>
    </table>
    <div class="panel-footer">
        <div class="pagination-right">
            <ul class="pagination">
                <li><a href="javascript:void(0);">&laquo;</a></li>
