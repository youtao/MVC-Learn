@model IEnumerable<dynamic>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            标题
        </th>
        <th>
            作者
        </th>
        <th>
            描述
        </th>
        <th>
            时间
        </th>
        <th></th>
    </tr>

    @foreach (dynamic item in Model)
    {
        <tr>
            <td>
                @item.Title
            </td>
            <td>
                @item.Author
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.CreateTime
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id =item.Unique }) |
            @Html.ActionLink("Details", "Details", new { id = item.Unique }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Unique })
        </td>
    </tr>
    }

</table>
